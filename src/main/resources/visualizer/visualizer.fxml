<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.gui.VisualizerController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Pane fx:id="visualizerPane" style="-fx-background-color: lightgray;" prefHeight="400" prefWidth="600"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="← LEFT" fx:id="leftButton"/>
        <Button text="Start" fx:id="toggleButton" onAction="#toggleStartStop"/>
        <Button text="RIGHT →" fx:id="rightButton"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Speed:"/>
        <Slider fx:id="speedSlider" min="0.01" max="0.20" value="0.05" showTickMarks="true" showTickLabels="true" majorTickUnit="0.05" blockIncrement="0.01"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Volume:"/>
        <Slider fx:id="volumeSlider" min="0" max="127" value="100" showTickMarks="true" showTickLabels="true" majorTickUnit="20" blockIncrement="5"/>
    </HBox>

    <Button text="Back" onAction="#backToMain" prefWidth="100"/>
</VBox>
