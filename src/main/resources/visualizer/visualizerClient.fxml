<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.gui.VisualizerClientController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Pane fx:id="visualizerPane" style="-fx-background-color: lightgray;" prefHeight="400" prefWidth="600"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="← LEFT" fx:id="leftButton"/>
        <Button text="Start" fx:id="toggleButton" onAction="#toggleStartStop"/>
        <Button text="RIGHT →" fx:id="rightButton"/>
        <Button text="Back" fx:id="backButton" onAction="#backToMain"/>
    </HBox>
</VBox>