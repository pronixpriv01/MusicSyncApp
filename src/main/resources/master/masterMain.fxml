<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.gui.MasterMainController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Master Control Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;" fx:id="headline"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Max Connections:"/>
        <TextField fx:id="setMaxConnections" prefWidth="100"/>
        <Button text="Start Server" onAction="#connectToClients" fx:id="connect"/>
    </HBox>

    <Button text="Stop Server" onAction="#stopMasterServer" fx:id="disconnectButton" prefWidth="150"/>

    <Button text="Start Visualizer" onAction="#startVisualizer" fx:id="startVisualizerButton" prefWidth="150"/>

    <Button text="Stop Visualizer" onAction="#stopVisualizer" fx:id="stopVisualizerButton" prefWidth="150"/>

    <Label text="Connected Clients:"/>
    <ListView fx:id="clientListView" prefHeight="200" prefWidth="300"/>

    <Button text="Back" onAction="#back" prefWidth="100"/>
</VBox>
