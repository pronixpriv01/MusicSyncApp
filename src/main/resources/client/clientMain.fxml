<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.gui.ClientMainController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Client Control Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Speed Control:"/>
    <Slider fx:id="speedSlider" min="0.01" max="0.20" value="0.05" showTickMarks="true" showTickLabels="true" majorTickUnit="0.05" blockIncrement="0.01"/>

    <Label text="Volume Control:"/>
    <Slider fx:id="volumeSlider" min="0" max="127" value="100" showTickMarks="true" showTickLabels="true" majorTickUnit="20" blockIncrement="5"/>

    <Button text="Back" onAction="#back" prefWidth="100"/>
</VBox>
