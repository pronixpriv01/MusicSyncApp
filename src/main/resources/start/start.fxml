<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.musicapp.gui.MainController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome to Midi Orchestra Synchronizer!"/>

    <Label fx:id="selectRole" text="Select Role"/>

    <ComboBox fx:id="masterOrClient">

    </ComboBox>


    <Button fx:id="toMainBtn" text="Start" onAction="#toMain"/>
</VBox>
